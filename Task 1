#include <iostream>
#include <string>
#include <algorithm>  // For transforming input to lowercase

using namespace std;

// Function to convert string to lowercase for case-insensitive matching
void toLowerCase(string &str) {
    transform(str.begin(), str.end(), str.begin(), ::tolower);
}

// Function for chatbot responses based on user input
void chatbot() {
    string userInput;

    cout << "Hello! I'm a simple chatbot. Type 'exit' to end the chat." << endl;

    while (true) {
        // Get user input
        cout << "You: ";
        getline(cin, userInput);
        
        // Convert the input to lowercase
        toLowerCase(userInput);

        // Exit condition: User wants to end the chat
        if (userInput == "exit") {
            cout << "Chatbot: Goodbye! Have a nice day!" << endl;
            break;
        }
        
        // Rule 1: Respond to greetings
        else if (userInput.find("hello") != string::npos || userInput.find("hi") != string::npos || userInput.find("hey") != string::npos) {
            cout << "Chatbot: Hi there! How can I help you today?" << endl;
        }
        
        // Rule 2: Respond to help requests
        else if (userInput.find("help") != string::npos || userInput.find("assist") != string::npos || userInput.find("support") != string::npos) {
            cout << "Chatbot: Sure, how can I assist you?" << endl;
        }

        // Rule 3: Respond to questions about the weather (just a placeholder response)
        else if (userInput.find("weather") != string::npos) {
            cout << "Chatbot: I can't check the weather right now, but I recommend checking a weather app or website." << endl;
        }

        // Rule 4: Respond to goodbye or farewell
        else if (userInput.find("bye") != string::npos || userInput.find("goodbye") != string::npos || userInput.find("see you") != string::npos) {
            cout << "Chatbot: Goodbye! Have a great day!" << endl;
            break;
        }

        // Rule 5: Default response for unrecognized inputs
        else {
            cout << "Chatbot: I'm not sure how to respond to that. Can you ask something else?" << endl;
        }
    }
}

int main() {
    // Start the chatbot
    chatbot();
    return 0;
}
